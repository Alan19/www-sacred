{
  "name": "srcl",
  "description": "SRCL is an open-source React component and style repository that helps you build web applications, desktop applications, and static websites with terminal aesthetics.",
  "engines": {
    "node": ">=18"
  },
  "version": "1.1.19",
  "type": "module",
  "license": "MIT",
  "main": "./dist/srcl.umd.js",
  "module": "./dist/srcl.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/srcl.es.js",
      "require": "./dist/srcl.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./global.css": "./global.css",
    "./global-fonts.css": "./global-fonts.css",
    "./style.css": "./dist/srcl.css"
  },
  "files": [
    "dist",
    "global.css",
    "global-fonts.css"
  ],
  "scripts": {
    "dev": "next -p 10000",
    "build": "vite build && tsc -p tsconfig.lib.json",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "next": "^16.1.4"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
